@model IEnumerable<ProyectoIdentity.Models.Domain.RegistroTiempo>

@{
    ViewData["Title"] = "Listado de Registros de Tiempo";
}

<h1>Listado de Registros de Tiempo</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Registrar Nuevo Tiempo</a>
</p>

<table class="table table-striped table-bordered" id="registrosTiempoTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abogado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Horas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescripcionActividad)
            </th>
            <th>
                Caso Asociado
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Facturable)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    
                    @Html.DisplayFor(modelItem => item.Abogado.NombreCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Horas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescripcionActividad)
                </td>
                <td>
                    
                    @(item.Caso != null ? $"{item.Caso.Titulo} ({item.Caso.Cliente.NombreCompleto})" : "N/A")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Facturable)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RegistroTiempoId" class="btn btn-warning btn-sm">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.RegistroTiempoId" class="btn btn-info btn-sm">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.RegistroTiempoId" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#registrosTiempoTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.20/i18n/Spanish.json"
                }
            });
        });
    </script>
}