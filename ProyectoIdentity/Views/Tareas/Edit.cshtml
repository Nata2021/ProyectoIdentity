@model ProyectoIdentity.Models.ViewModels.TareaCreateEditViewModel

@{
    ViewData["Title"] = "Editar Tarea";
}

<h1>Editar Tarea</h1>

<h4>Tarea</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" asp-route-id="@Model.TareaId"> @* Asegúrate de pasar el ID *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TareaId" /> @* Campo oculto para el ID de la tarea *@
            
            <div class="form-group mb-3">
                <label asp-for="CasoId" class="control-label"></label>
                <select asp-for="CasoId" asp-items="@Model.CasosList" class="form-control"></select>
                <span asp-validation-for="CasoId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Descripcion" class="control-label"></label>
                <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="FechaLimite" class="control-label"></label>
                <input asp-for="FechaLimite" class="form-control" type="date" />
                <span asp-validation-for="FechaLimite" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" asp-items="Html.GetEnumSelectList<ProyectoIdentity.Models.Domain.Enums.EstadoTarea>()" class="form-control"></select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="AsignadoA" class="control-label"></label>
                <select asp-for="AsignadoA" asp-items="@Model.AbogadosList" class="form-control"></select>
                <span asp-validation-for="AsignadoA" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="TipoTarea" class="control-label"></label>
                <select asp-for="TipoTarea" asp-items="Html.GetEnumSelectList<ProyectoIdentity.Models.Domain.Enums.TipoTarea>()" class="form-control"></select>
                <span asp-validation-for="TipoTarea" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Prioridad" class="control-label"></label>
                <select asp-for="Prioridad" asp-items="Html.GetEnumSelectList<ProyectoIdentity.Models.Domain.Enums.Prioridad>()" class="form-control"></select>
                <span asp-validation-for="Prioridad" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PorcentajeProgreso" class="control-label"></label>
                <input asp-for="PorcentajeProgreso" class="form-control" type="range" min="0" max="100" /> @* Slider para progreso *@
                <span asp-validation-for="PorcentajeProgreso" class="text-danger"></span>
                <output for="PorcentajeProgreso" id="progressValue">@Model.PorcentajeProgreso%</output>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            flatpickr("#FechaLimite", {
                dateFormat: "Y-m-d",
                allowInput: true,
                altInput: true,
                altFormat: "F j, Y",
            });

            // Actualizar el valor del slider de progreso
            const progresoInput = document.getElementById('PorcentajeProgreso');
            const progresoValue = document.getElementById('progressValue');
            if (progresoInput && progresoValue) {
                progresoInput.addEventListener('input', function() {
                    progresoValue.textContent = this.value + '%';
                });
            }
        });
    </script>
}