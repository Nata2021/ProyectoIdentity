@model ProyectoIdentity.Models.ViewModels.MovimientoFinancieroCreateEditViewModel

@{
    ViewData["Title"] = "Editar Movimiento Financiero";
}

<h1>Editar Movimiento Financiero</h1>

<h4>Movimiento</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" asp-route-id="@Model.MovimientoId"> 
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MovimientoId" /> 
            
            <div class="form-group mb-3">
                <label asp-for="TipoMovimiento" class="control-label"></label>
                <select asp-for="TipoMovimiento" asp-items="Html.GetEnumSelectList<ProyectoIdentity.Models.Domain.Enums.TipoMovimientoFinanciero>()" class="form-control"></select>
                <span asp-validation-for="TipoMovimiento" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Concepto" class="control-label"></label>
                <input asp-for="Concepto" class="form-control" />
                <span asp-validation-for="Concepto" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="FechaMovimiento" class="control-label"></label>
                <input asp-for="FechaMovimiento" class="form-control" type="datetime-local" />
                <span asp-validation-for="FechaMovimiento" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CasoId" class="control-label"></label>
                <select asp-for="CasoId" asp-items="@Model.CasosList" class="form-control">
                    <option value="">-- Sin Caso Asociado --</option>
                </select>
                <span asp-validation-for="CasoId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="AbogadoId" class="control-label"></label>
                <select asp-for="AbogadoId" asp-items="@Model.AbogadosList" class="form-control">
                    <option value="">-- Sin Abogado Registrador --</option>
                </select>
                <span asp-validation-for="AbogadoId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            flatpickr("#FechaMovimiento", {
                enableTime: true,
                dateFormat: "Y-m-d H:i",
                altInput: true,
                altFormat: "F j, Y h:i K",
                time_24hr: true
            });
        });
    </script>
}