@model ProyectoIdentity.Models.Domain.MovimientoFinanciero

@{
    ViewData["Title"] = "Eliminar Movimiento Financiero";
}

<h1>Eliminar Movimiento Financiero</h1>

<h3>¿Está seguro de que desea eliminar este movimiento?</h3>
<div>
    <h4>Movimiento</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.TipoMovimiento)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.TipoMovimiento)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Concepto)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Concepto)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Monto)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Monto)
        </dd>
        <dt class="col-sm-3">
            Caso Asociado
        </dt>
        <dd class="col-sm-9">
            @(Model.Caso != null ? Model.Caso.Titulo : "N/A")
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.IsDeleted)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.IsDeleted)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MovimientoId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>