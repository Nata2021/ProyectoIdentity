@model IEnumerable<ProyectoIdentity.Models.ViewModels.UsuarioListViewModel>

@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<h1>Gestión de Usuarios</h1>

@* Puedes añadir un botón para crear usuarios si tienes un método para ello *@
@* <p>
    <a asp-action="CrearUsuario" class="btn btn-primary">Crear Nuevo Usuario</a>
</p> *@

<table class="table table-striped table-bordered" id="usuariosTable">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.UserName)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Estado)</th>
            <th>@Html.DisplayNameFor(model => model.Roles)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>
                    @if (item.Estado)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactivo</span>
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.Roles)</td>
                <td>                   
                    <a asp-action="EditarUsuario" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar Roles</a> |
                    <form asp-action="ToggleActivo" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('¿Está seguro de cambiar el estado de este usuario?');">
                        <button type="submit" class="btn @(item.Estado ? "btn-danger" : "btn-success") btn-sm">
                            @(item.Estado ? "Desactivar" : "Activar")
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#usuariosTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.20/i18n/Spanish.json"
                }
            });
        });
    </script>
}