@using ProyectoIdentity.Models.ViewModels
@model OlvidoPasswordViewModel 

@{
    ViewData["Title"] = "Olvido su contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row justify-content-center mt-5">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body p-4">
                <h2 class="mb-4 text-center">¿Olvidaste tu contraseña?</h2>
                <p class="text-muted text-center mb-4">
                    Ingresá tu correo electrónico y te enviaremos un enlace para restablecerla.
                </p>

                <form asp-controller="Cuentas" asp-action="OlvidoPassword" method="post">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Correo electrónico</label>
                        <input asp-for="Email" class="form-control" placeholder="tucorreo@ejemplo.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-lg rounded-3">
                            Enviar enlace de recuperación
                        </button>
                    </div>

                    <div class="text-center mt-4">
                        <a asp-action="Acceso">Volver al inicio de sesión</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}