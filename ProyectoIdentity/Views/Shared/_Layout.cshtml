@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />    
    <title>@ViewData["Title"] EJ Cavalli</title>

    <meta name="csrf-token" content="@Antiforgery.GetAndStoreTokens(Context).RequestToken" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" integrity="sha512-vKMx8UnXk60zUwyUnUPM3HbQo8QfmNx7+ntHDk/7btxKees2aEuQMZzInGmk3H2FhBff2c7gr9sBUgrNPIB8gA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoIdentity.styles.css" asp-append-version="true" />

   

    @await RenderSectionAsync("Styles", required: false)
    
    
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-black shadow-sm">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Estudio Juridico</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        @* Dropdown para Gestión de Expedientes *@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="gestionExpedientesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-folder-fill me-1"></i> Expedientes
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="gestionExpedientesDropdown">
                                <li><a class="dropdown-item" asp-controller="Casos" asp-action="Index">Casos</a></li>
                                <li><a class="dropdown-item" asp-controller="Tareas" asp-action="Index">Tareas</a></li>
                                <li><a class="dropdown-item" asp-controller="Audiencias" asp-action="Index">Audiencias</a></li>
                                <li><a class="dropdown-item" asp-controller="Documentos" asp-action="Index">Documentos</a></li>
                                <li><a class="dropdown-item" asp-controller="Comunicaciones" asp-action="Index">Comunicaciones</a></li>
                            </ul>
                        </li>
                        @* Dropdown para Finanzas *@
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="finanzasDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-currency-dollar me-1"></i> Finanzas
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="finanzasDropdown">
                                        <li><a class="dropdown-item" asp-controller="MovimientosFinancieros" asp-action="Index">Movimientos</a></li>
                                        <li><a class="dropdown-item" asp-controller="RegistrosTiempo" asp-action="Index">Registro Horas</a></li>
                                    </ul>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Abogados" asp-action="Index">
                                        <i class="bi bi-people-fill me-1"></i> Abogados
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Clientes" asp-action="Index">
                                        <i class="bi bi-person-rolodex me-1"></i> Clientes
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                        <i class="bi bi-shield-lock-fill me-1"></i> Privacidad
                                    </a>
                                </li>

                                @* Aquí moveremos el componente de notificaciones o su icono *@
                                @* <li class="nav-item">
                                    @await Component.InvokeAsync("Notificaciones")
                                </li> *@
                            </ul>

                            @* Partial de Login/Registro se mantiene *@
                            <partial name="_LoginRegistroVistaParcial" />


                    <ul class="navbar-nav me-3">
                        <li class="nav-item dropdown">
                            @await Component.InvokeAsync("Notificaciones")
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <footer class="mt-auto border-top">
        <div class="container">
            &copy; @DateTime.Now.Year - Estudio Juridico - <a asp-area="" asp-controller="Home" asp-action="Privacy">Política de privacidad</a>
        </div>
    </footer>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtSt7lmPXD0Hqwcqy2tWErBw/d5tPbeynP8p4Q==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
   
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>